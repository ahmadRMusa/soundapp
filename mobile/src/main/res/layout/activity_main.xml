<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MyGrid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight=".5"
    android:gravity="center"
    android:padding="5dp"
    android:stretchColumns="0,1">

    <!--
        TODO: Open soundfile, play soundfile, apply filter
    -->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@null"
            android:onClick="playSound"
            android:src="@android:drawable/ic_media_play"
            android:text="@string/play" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@null"
            android:onClick="applyFilter1"
            android:src="@drawable/happy"
            android:text="@string/applyFilter1" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@null"
            android:onClick="applyFilter2"
            android:src="@drawable/dark"
            android:text="@string/applyFilter2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@null"
            android:onClick="applyFilter3"
            android:src="@drawable/echo"
            android:text="@string/applyFilter2" />

    </TableRow>
</TableLayout>
